# Development Environment Configuration
# Copy to .env and source it in Bash with:
#   set -a; source .env; set +a

# ============================================================================
# Django Core Settings
# ============================================================================

DJANGO_ENV=development
DJANGO_SECRET_KEY=insecure-dev-key-change-in-production
DJANGO_DEBUG=True

# Add your host LAN IP here (e.g., 192.168.1.50)
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,192.168.1.50

# Optional: CSRF trusted origins if using reverse proxy/HTTPS
# Example: http://192.168.1.50,http://myhost.local
DJANGO_CSRF_TRUSTED_ORIGINS=

# Application version (for health checks)
APP_VERSION=1.0.0-dev


# ============================================================================
# Database Configuration (PostgreSQL)
# ============================================================================

POSTGRES_DB=ahsp_sni_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432


# ============================================================================
# Redis Cache Configuration (REQUIRED for rate limiting)
# ============================================================================

# Redis connection URL
# Format: redis://[password]@host:port/db
REDIS_URL=redis://127.0.0.1:6379/1

# Optional: Redis password (if authentication is enabled)
REDIS_PASSWORD=

# Optional: Redis connection pool settings
REDIS_MAX_CONNECTIONS=50


# ============================================================================
# Gunicorn Configuration (for production-like testing)
# ============================================================================

GUNICORN_WORKERS=3
GUNICORN_TIMEOUT=120
GUNICORN_BIND=0.0.0.0:8000
GUNICORN_LOG_LEVEL=info
GUNICORN_ACCESS_LOG=logs/gunicorn-access.log
GUNICORN_ERROR_LOG=logs/gunicorn-error.log


# ============================================================================
# Logging
# ============================================================================

DJANGO_LOG_LEVEL=DEBUG
DJANGO_PERF_THRESHOLD=0.8


# ============================================================================
# Email Configuration (Development)
# ============================================================================

DJANGO_EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
DJANGO_DEFAULT_FROM_EMAIL=dev@localhost


# ============================================================================
# Static Files
# ============================================================================

# Leave empty for development (Django will serve static files)
# DJANGO_STATIC_ROOT=/path/to/static


# ============================================================================
# Security Settings (Development)
# ============================================================================

# HTTPS settings (disable for local development)
DJANGO_SECURE_SSL_REDIRECT=False
DJANGO_SESSION_COOKIE_SECURE=False
DJANGO_CSRF_COOKIE_SECURE=False


# ============================================================================
# Rate Limiting Configuration
# ============================================================================

# Enable/disable rate limiting
RATE_LIMITING_ENABLED=True

# Default rate limits (can be overridden per endpoint)
RATE_LIMIT_DEFAULT_MAX_REQUESTS=100
RATE_LIMIT_DEFAULT_WINDOW=60
