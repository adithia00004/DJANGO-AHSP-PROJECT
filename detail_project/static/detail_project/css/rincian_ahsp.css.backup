/* =====================================================================
   RINCIAN_AHSP.CSS â€” 100% IDENTIK dengan Template AHSP

   FILOSOFI: Rincian AHSP = Template AHSP + kolom harga
   Semua styling UI/UX harus IDENTIK, hanya tabel yang berbeda (5 vs 7 kolom)
   ===================================================================== */

/* ===== Header ===== */
.ta-app .ta-page-header {
  margin-top: 8px;
  background: var(--bs-card-bg, var(--dp-c-surface));
  padding: 1rem;
  border-radius: var(--dp-radius-md);
  margin-bottom: .5rem;
}
.ta-app .ta-title{ margin:0; font-weight:700; font-size: var(--ux-font-lg); letter-spacing:.2px; }
.ta-app .ta-subtitle{ margin:2px 0 0 0; color:var(--dp-c-muted); font-size: var(--ux-font-md); }

/* ===== Toolbar (SELARAS dengan List Pekerjaan/Volume/Rekap RAB) ===== */
.ta-app .ta-toolbar{
  /* sticky handled by dp-sticky-topbar class on HTML */
  z-index: var(--dp-z-toolbar);
  background: var(--bs-card-bg, var(--dp-c-surface));
  border: 0;
  border-bottom: 1px solid var(--dp-c-border);
  border-radius: 0;
  padding: .5rem 0;
  min-height: var(--dp-toolbar-h);
  box-shadow: var(--dp-shadow-sm);
  gap: .5rem;
  flex-wrap: wrap;
}
.ta-app .ta-toolbar .btn{
  white-space: nowrap;
  font-size: var(--ux-font-xs);
  line-height: 1.5;
  padding: .375rem .75rem;
  border-radius: var(--dp-radius-md);
  box-shadow: var(--dp-shadow-sm);
  transition: all var(--ux-duration-200) var(--ux-ease);
}
.ta-app .ta-toolbar .btn:hover{
  transform: translateY(-1px);
  box-shadow: var(--dp-shadow-md);
}
.ta-app .ta-toolbar .btn:active{
  transform: translateY(0) scale(0.98);
  box-shadow: var(--dp-shadow-sm);
}
.ta-app .ta-searchbar{
  flex: 1 1 clamp(24rem, 50vw, 48rem);
  min-width: 0;
}
/* sejajarkan ikon & sambungkan border dengan input */
.ta-app .ta-searchbar .input-group-text{ border-right:0; display:flex; align-items:center; }
.ta-app .ta-searchbar .form-control{ border-left:0; }
.ta-app .ta-toolbar-hint{ color: var(--dp-c-muted); font-size: var(--ux-font-xs); }
.ta-app .ta-toolbar-hint .kbd-hint kbd{ margin: 0 .1rem; }

/* Input group sizing and theme in toolbar (SELARAS dengan Rekap RAB) */
.ta-app #ra-toolbar .input-group .form-control,
.ta-app #ra-toolbar .input-group .input-group-text{
  font-size: var(--ux-font-xs);
  line-height: 1.5;
  padding-top: .375rem;
  padding-bottom: .375rem;
  border-color: var(--dp-c-border);
  transition: all var(--ux-duration-200) var(--ux-ease);
}
.ta-app #ra-toolbar .input-group .form-control{
  background: var(--dp-c-bg);
  color: var(--dp-c-text);
}
.ta-app #ra-toolbar .input-group .form-control:focus{
  border-color: var(--dp-c-primary);
  box-shadow: 0 0 0 .2rem var(--dp-c-focus);
  outline: 0;
  transform: scale(1.005);
}
.ta-app #ra-toolbar .input-group .input-group-text{
  background: var(--dp-c-surface-2);
  color: var(--dp-c-muted);
}

/* Toolbar dropdown theme (SELARAS dengan Rekap RAB) */
.ta-app #ra-toolbar .dropdown-menu{
  background: var(--dp-c-bg);
  color: var(--dp-c-text);
  border: 1px solid var(--dp-c-border);
  box-shadow: var(--dp-shadow-lg);
  border-radius: var(--dp-radius-md);
  padding: .75rem;
  min-width: 220px;
  animation: dropdownSlideIn var(--ux-duration-200) var(--ux-ease);
}

@keyframes dropdownSlideIn {
  from {
    opacity: 0;
    transform: translateY(-8px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* ===== Body Grid (sidebar | resizer | editor) ===== */
.ta-app .ta-body{
  display: grid;
  grid-template-columns:
    minmax(280px, var(--ta-left-w, 25%))
    6px
    minmax(var(--ta-editor-min, 600px), 1fr);
  gap: 12px;
  align-items: stretch;
}
.ta-app #ra-resizer{
  grid-column: 2;
  grid-row: 1 / -1;
  cursor: col-resize;
}

/* Tanpa min-width:0 */
.ta-app .ta-sidebar,
.ta-app .ta-editor{
  overflow: hidden;
}

/* ===== Sidebar (SELARAS dengan List Pekerjaan) ===== */
.ta-app .ta-sidebar{
  background: var(--dp-c-bg);
  border: 2px solid var(--dp-c-border);
  border-radius: var(--dp-radius-lg);
  padding: 10px;
  display: flex;
  flex-direction: column;
  box-shadow: var(--dp-shadow-sm);
  transition: box-shadow var(--ux-duration-200) var(--ux-ease);
}
.ta-app .ta-sidebar:hover{
  box-shadow: var(--dp-shadow-md);
}

/* Job list (IDENTIK) */
.ta-app .ta-job-list,
.ta-app #rk-list {
  list-style: none;
  margin: 8px 0 0 0;
  padding: 0;
  max-height: calc(100vh - var(--ra-headroom, 220px));
  overflow: auto;
  position: relative;
  background-clip: padding-box;
  scrollbar-gutter: stable both-edges;
}

/* Scroll shadows untuk job list */
.ta-app .ta-job-list::before,
.ta-app .ta-job-list::after {
  content: "";
  position: sticky;
  left: 0;
  right: 0;
  height: 14px;
  pointer-events: none;
  z-index: 1;
}

.ta-app .ta-job-list::before {
  top: 0;
  background: linear-gradient(to bottom, color-mix(in srgb, var(--dp-c-text) 14%, transparent), transparent);
}

.ta-app .ta-job-list::after {
  bottom: 0;
  background: linear-gradient(to top, color-mix(in srgb, var(--dp-c-text) 14%, transparent), transparent);
}

/* Custom scrollbar */
.ta-app .ta-job-list::-webkit-scrollbar {
  width: 8px;
}

.ta-app .ta-job-list::-webkit-scrollbar-thumb {
  background: color-mix(in srgb, var(--dp-c-text) 20%, transparent);
  border-radius: 8px;
  transition: background var(--ux-duration-200) var(--ux-ease);
}

.ta-app .ta-job-list::-webkit-scrollbar-thumb:hover {
  background: color-mix(in srgb, var(--dp-c-text) 35%, transparent);
}

.ta-app .ta-job-list::-webkit-scrollbar-track {
  background: transparent;
  transition: background var(--ux-duration-200) var(--ux-ease);
}

.ta-app .ta-job-list:hover::-webkit-scrollbar-track {
  background: color-mix(in srgb, var(--dp-c-border) 20%, transparent);
}

/* ===== JOB ITEM (100% IDENTIK dengan Template AHSP) ===== */
.ta-app .ta-job-item,
.ta-app .rk-item {
  padding: 8px;
  border-radius: var(--dp-radius-sm);
  cursor: pointer;
  border: 1px solid transparent;
  transition: background-color .15s ease, border-color .15s ease, box-shadow .15s ease;
  background: var(--dp-c-surface);
}

.ta-app .ta-job-item:hover,
.ta-app .rk-item:hover {
  background: var(--dp-c-surface-2);
}

.ta-app .ta-job-item.is-active,
.ta-app .ta-job-item.active,
.ta-app .rk-item.active {
  border-color: color-mix(in srgb, var(--dp-c-primary) 15%, transparent);
  background: var(--dp-c-primary-subtle);
  position: relative;
}

.ta-app .ta-job-item.is-active::before,
.ta-app .ta-job-item.active::before,
.ta-app .rk-item.active::before {
  content: "";
  position: absolute;
  inset: 6px auto 6px 4px;
  width: 2px;
  border-radius: 2px;
  background: color-mix(in srgb, var(--dp-c-primary) 72%, transparent);
}

.ta-app .ta-job-item:focus-visible,
.ta-app .rk-item:focus-visible {
  outline: 0;
  box-shadow: 0 0 0 .2rem var(--dp-c-focus);
  border-color: color-mix(in srgb, var(--dp-c-primary) 55%, transparent);
}

/* Job item structure (IDENTIK dengan Template AHSP) */
.ta-app .ta-job-item .primary,
.ta-app .rk-item .primary,
.ta-app .rk-item-title {
  display: flex;
  flex-direction: column;
  gap: 2px;
}

.ta-app .ta-job-item .primary .kode,
.ta-app .rk-item .primary .kode,
.ta-app .rk-item-kode {
  font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, monospace;
  font-size: var(--ux-font-xs);
  font-weight: 600;
  color: var(--dp-c-muted);
}

.ta-app .ta-job-item .primary .uraian,
.ta-app .rk-item .primary .uraian,
.ta-app .rk-item-title {
  font-weight: 400;
  line-height: 1.35;
  font-size: var(--ux-font-sm);
  /* Clamp 2 baris */
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  overflow: hidden;
}

.ta-app .ta-job-item .meta,
.ta-app .rk-item .meta,
.ta-app .rk-item-meta {
  display: flex;
  flex-wrap: wrap;
  gap: 8px;
  align-items: center;
  font-size: var(--ux-font-xs);
  color: var(--dp-c-muted);
  margin-top: 4px;
}

.ta-app .ta-job-item .meta .satuan,
.ta-app .rk-item .meta .satuan,
.ta-app .rk-item-satuan {
  font-size: var(--ux-font-xs);
}

/* Menyembunyikan chip di dalam job item meta (per permintaan user) */
.ta-app #rk-list > li.rk-item .rk-item-meta > .rk-chip,
.ta-app #rk-list > li.rk-item .meta > .rk-chip {
  display: none;
}

/* Menghapus padding dari row-note di dalam rk-item-meta (per permintaan user) */
.ta-app #rk-list > li.rk-item .rk-item-meta > .row-note,
.ta-app #rk-list > li.rk-item .meta > .row-note {
  padding: 0;
  margin: 0;
}

/* Empty state */
.row-note,
.ta-empty {
  padding: 2rem 1rem;
  text-align: center;
  color: var(--dp-c-muted);
  font-size: var(--ux-font-sm);
}

/* ===== RESIZER (IDENTIK) ===== */
.ta-app .rk-resizer,
.ta-app .ux-resizer {
  position: relative;
  cursor: col-resize;
  user-select: none;
}

.ta-app .rk-resizer::before,
.ta-app .ux-resizer::before {
  content: "";
  position: absolute;
  inset: 0;
  background: linear-gradient(transparent 40%, color-mix(in srgb, var(--dp-c-text) 22%, transparent) 40% 60%, transparent 60%) center/2px 22px no-repeat;
  opacity: .25;
  transition: opacity var(--ux-duration-200) var(--ux-ease);
}

.ta-app .rk-resizer:hover::before,
.ta-app .rk-resizer:focus::before,
.ta-app .ux-resizer:hover::before,
.ta-app .ux-resizer:focus::before {
  opacity: .6;
}

.ta-app .rk-resizer:focus,
.ta-app .ux-resizer:focus {
  outline: 2px solid var(--dp-c-focus);
  outline-offset: -2px;
}

/* ===== EDITOR PANEL (100% IDENTIK dengan Template AHSP) ===== */
.ta-app .rk-right.ta-editor,
.ta-app .ta-editor {
  background: var(--ta-editor-surface, var(--dp-c-surface-1));
  border: 2px solid var(--dp-c-border);
  border-radius: var(--dp-radius-lg);
  display: flex;
  flex-direction: column;
  min-height: 0;
  overflow: auto;
  padding-left: var(--ta-editor-pad-x, 10px);
  padding-right: var(--ta-editor-pad-x, 10px);
  position: relative;
  box-shadow: var(--dp-shadow-sm);
  transition: box-shadow var(--ux-duration-200) var(--ux-ease);
}

.ta-app .ta-editor:hover {
  box-shadow: var(--dp-shadow-md);
}

.ta-app .ta-editor > * {
  padding-left: 0;
  padding-right: 0;
}

/* HAPUS scroll shadows (seperti Template AHSP) */
.ta-app .rk-right.ta-editor::before,
.ta-app .rk-right.ta-editor::after,
.ta-app .ta-editor::before,
.ta-app .ta-editor::after {
  content: none;
  display: none;
}

/* ===== HEADER PANEL KANAN (IDENTIK dengan Template AHSP .ta-seg-header) ===== */
.ta-app .rk-right-header.ta-seg-header,
.ta-app .ta-seg-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 10px;
  margin-bottom: 6px;
  padding: 6px 0;
  border-bottom: 1px solid var(--dp-c-border);
  background: var(--dp-c-surface-1);
  position: sticky;
  top: var(--ta-sticky-gap, 0px);
  z-index: var(--ta-seg-z, 12032);
  backdrop-filter: saturate(1.1) blur(2px);
}

.ta-app .ta-seg-header h2,
.ta-app .rk-right-title {
  margin: 0;
  font-size: var(--ux-font-lg);
  font-weight: 700;
  letter-spacing: .2px;
}

/* Header metadata (IDENTIK dengan Template AHSP) */
.ta-app .rk-right-meta {
  font-size: var(--ux-font-xs);
  color: var(--dp-c-muted);
  font-weight: 400;
}

/* Uraian di header (IDENTIK dengan #ta-active-uraian) */
#rk-pkj-uraian {
  font-weight: 400;
  font-size: var(--ux-font-sm);
  line-height: 1.4;
}

/* Right actions (Override controls) - Compact seperti Template AHSP */
.ta-app .rk-right-actions {
  display: flex;
  align-items: center;
  gap: 6px;
  flex-wrap: wrap;
}

/* ===== CHIPS & BADGES (IDENTIK) ===== */
.ta-app .ta-chip,
.ta-app .rk-chip {
  display: inline-flex;
  align-items: center;
  gap: 4px;
  border-radius: calc(var(--dp-radius-sm) - 2px);
  padding: 2px 8px;
  font-size: var(--ux-font-2xs);
  line-height: 1.2;
  border: 1px solid var(--dp-c-border);
  background: var(--dp-c-surface-2);
  color: var(--dp-c-text);
  font-weight: 500;
}

.ta-app .ta-chip i,
.ta-app .rk-chip i {
  font-size: 0.85em;
}

.ta-app .ta-chip-warn {
  background: color-mix(in srgb, var(--dp-c-warning) 14%, transparent);
  border-color: color-mix(in srgb, var(--dp-c-warning) 30%, transparent);
}

.ux-badge-ref {
  background: color-mix(in srgb, var(--dp-c-info) 15%, transparent);
  border: 1px solid color-mix(in srgb, var(--dp-c-info) 30%, transparent);
  font-size: var(--ux-font-2xs);
  padding: 2px 6px;
  border-radius: var(--dp-radius-sm);
  font-weight: 500;
}

.ux-badge-mod {
  background: color-mix(in srgb, var(--dp-c-warning) 15%, transparent);
  border: 1px solid color-mix(in srgb, var(--dp-c-warning) 30%, transparent);
  font-size: var(--ux-font-2xs);
  padding: 2px 6px;
  border-radius: var(--dp-radius-sm);
  font-weight: 500;
}

.ux-badge-cus {
  background: color-mix(in srgb, var(--dp-c-success) 15%, transparent);
  border: 1px solid color-mix(in srgb, var(--dp-c-success) 30%, transparent);
  font-size: var(--ux-font-2xs);
  padding: 2px 6px;
  border-radius: var(--dp-radius-sm);
  font-weight: 500;
}

/* Summary badges */
.ta-app #rk-summary {
  display: flex;
  flex-wrap: wrap;
  gap: 8px;
  margin: 12px 0;
}

.ta-app #rk-summary .ux-badge-ref {
  background: var(--dp-c-surface-2);
  padding: 4px 8px;
  border-radius: var(--dp-radius-sm);
  font-size: var(--ux-font-xs);
}

/* ===== TABLE (IDENTIK dengan Template AHSP) ===== */
.ta-app .hi-table-wrap,
.ta-app .ta-table-wrap {
  border-top: 1px solid var(--dp-c-border);
  background: var(--dp-c-surface);
  overflow: auto;
  padding-bottom: 10px;
  scrollbar-gutter: stable both-edges;
}

/* Custom scrollbar untuk table */
.ta-app .ta-table-wrap::-webkit-scrollbar {
  height: 8px;
  width: 8px;
}

.ta-app .ta-table-wrap::-webkit-scrollbar-thumb {
  background: color-mix(in srgb, var(--dp-c-text) 20%, transparent);
  border-radius: 8px;
  transition: background var(--ux-duration-200) var(--ux-ease);
}

.ta-app .ta-table-wrap::-webkit-scrollbar-thumb:hover {
  background: color-mix(in srgb, var(--dp-c-text) 35%, transparent);
}

.ta-app .ta-table-wrap::-webkit-scrollbar-track {
  background: transparent;
  transition: background var(--ux-duration-200) var(--ux-ease);
}

.ta-app .ta-table-wrap:hover::-webkit-scrollbar-track {
  background: color-mix(in srgb, var(--dp-c-border) 20%, transparent);
}

/* Table structure (IDENTIK) */
.ta-app table.ta-table,
.ta-app table.ra-table {
  width: 100%;
  border-collapse: separate;
  border-spacing: 0;
  font-size: var(--ux-font-md);
  table-layout: fixed;
}

/* Table header (IDENTIK) */
.ta-app table.ta-table thead th,
.ta-app table.ra-table thead th {
  background: var(--dp-c-surface-2);
  border-bottom: 2px solid var(--dp-c-border);
  font-size: var(--ux-font-xs);
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: .03em;
  padding: .5rem .75rem;
  vertical-align: middle;
}

/* Table cells (IDENTIK) */
.ta-app table.ta-table th,
.ta-app table.ta-table td,
.ta-app table.ra-table th,
.ta-app table.ra-table td {
  border: 1px solid var(--dp-c-border);
  padding: .5rem .75rem;
  vertical-align: middle;
  background: var(--dp-c-surface);
  word-break: break-word;
  overflow-wrap: anywhere;
  transition: background-color var(--ux-duration-200) var(--ux-ease);
}

/* Zebra striping (IDENTIK) */
.ta-app table.ta-table tbody tr:nth-child(odd) > *,
.ta-app table.ra-table tbody tr:nth-child(odd) > * {
  background: color-mix(in srgb, var(--dp-c-surface-2) 30%, transparent);
}

/* Row hover (IDENTIK) */
.ta-app table.ta-table tbody tr:hover > *,
.ta-app table.ra-table tbody tr:hover > * {
  background: color-mix(in srgb, var(--dp-c-primary) 6%, transparent);
}

/* Fokus row (IDENTIK) */
.ta-app table.ta-table tbody tr.is-active,
.ta-app table.ta-table tbody tr:focus-within,
.ta-app table.ra-table tbody tr.is-active,
.ta-app table.ra-table tbody tr:focus-within {
  outline: 2px solid var(--dp-c-focus);
  outline-offset: -2px;
}

/* Column widths untuk Rincian AHSP (7 kolom) */
.ta-app #ra-table col.col-no {
  width: 6ch;
}

.ta-app #ra-table col.col-uraian {
  width: auto;
}

.ta-app #ra-table col.col-kode {
  width: 10ch;
}

.ta-app #ra-table col.col-satuan {
  width: 8ch;
}

.ta-app #ra-table col.col-koef {
  width: 14ch;
}

.ta-app #ra-table col.col-rps {
  width: 18ch;
}

.ta-app #ra-table col.col-rpj {
  width: 18ch;
}

/* Alignment untuk angka */
.ta-app table.ra-table td:nth-child(4) {
  text-align: center;
}

.ta-app table.ra-table td:nth-child(5),
.ta-app table.ra-table td:nth-child(6),
.ta-app table.ra-table td:nth-child(7) {
  text-align: right;
  font-variant-numeric: tabular-nums;
}

/* ===== BUTTONS (100% IDENTIK dengan Template AHSP) ===== */
.ta-app .btn {
  font-size: var(--ux-font-xs);
  line-height: 1.1;
  padding: .375rem .75rem;
  border-radius: var(--dp-radius-sm);
  box-shadow: var(--dp-shadow-sm);
  white-space: nowrap;
  transition: all var(--ux-duration-200) var(--ux-ease);
}

.ta-app .btn:hover {
  transform: translateY(-1px);
  box-shadow: var(--dp-shadow-md);
}

.ta-app .btn:active {
  transform: translateY(0) scale(0.98);
  box-shadow: var(--dp-shadow-sm);
}

.ta-app .btn-sm,
.ta-app .btn-group-sm > .btn {
  font-size: var(--ux-font-xs);
  line-height: 1.1;
  padding: .25rem .5rem;
  border-radius: var(--dp-radius-sm);
}

.ta-app .btn i {
  margin-right: .35rem;
}

.ta-app .btn i:last-child {
  margin-right: 0;
  margin-left: .35rem;
}

.ta-app .btn.btn-neon {
  box-shadow: 0 0 0 .2rem rgba(13,110,253,.25);
}

.ta-app .btn.btn-neon:hover {
  box-shadow: 0 0 0 .2rem rgba(13,110,253,.35), 0 0 18px rgba(13,110,253,.45);
}

/* ===== INPUT CONTROLS (IDENTIK) ===== */
.ta-app input.hi-input,
.ta-app .ta-input,
.ta-app .cell-input {
  width: 100%;
  border: 1px solid var(--dp-c-border);
  border-radius: var(--dp-radius-sm);
  background: var(--dp-c-bg);
  color: var(--dp-c-text);
  font-size: var(--ux-font-xs);
  line-height: 1.25;
  padding: .375rem .5rem;
  transition: all var(--ux-duration-200) var(--ux-ease);
}

.ta-app input.hi-input:focus,
.ta-app .ta-input:focus,
.ta-app .cell-input:focus {
  border-color: color-mix(in srgb, var(--dp-c-primary) 55%, transparent);
  box-shadow: 0 0 0 .2rem var(--dp-c-focus);
  outline: 0;
}

/* Override input khusus */
#rk-ovr-input {
  font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, monospace;
  text-align: right;
  font-size: var(--ux-font-xs);
}

/* Input group sizing */
.ta-app .input-group-sm .input-group-text {
  font-size: var(--ux-font-xs);
  line-height: 1.1;
  padding: .25rem .5rem;
  background: var(--dp-c-surface-2);
  color: var(--dp-c-muted);
  border-color: var(--dp-c-border);
}

.ta-app .input-group-sm .form-control {
  font-size: var(--ux-font-xs);
  line-height: 1.1;
  padding: .25rem .5rem;
}

/* ===== FOCUS MANAGEMENT (IDENTIK) ===== */
.ux-focusable:focus {
  outline: 0;
  box-shadow: 0 0 0 .2rem var(--dp-c-focus);
  border-color: color-mix(in srgb, var(--dp-c-primary) 55%, transparent);
}

/* ===== MONOSPACE ===== */
.ta-app .mono,
.ta-app .ux-mono {
  font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, monospace;
}

/* ===== TOAST ===== */
.ta-app .rk-toast-wrap {
  position: fixed;
  bottom: 1rem;
  right: 1rem;
  z-index: calc(var(--dp-z-modal) + 200);
}

/* ===== RESPONSIVE (IDENTIK dengan Template AHSP) ===== */

@media (max-width: 1199.98px) {
  body[data-page="rincian_ahsp"] {
    --ra-left-w: 340px;
  }

  .ta-app table.ta-table th,
  .ta-app table.ta-table td {
    padding: .45rem .65rem;
    font-size: .74rem;
  }
}

@media (max-width: 991.98px) {
  body[data-page="rincian_ahsp"] {
    --ra-left-w: 320px;
  }

  .ta-app.ta-app .ta-toolbar {
    gap: .375rem;
  }

  .ta-app .btn {
    padding: .3rem .6rem;
  }

  .ta-app table.ta-table th,
  .ta-app table.ta-table td {
    padding: .4rem .6rem;
    font-size: .72rem;
  }
}

@media (max-width: 767.98px) {
  body[data-page="rincian_ahsp"] {
    --ra-left-w: 280px;
  }

  .ta-app .hi-body,
  .ta-app .ta-body {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .ta-app .rk-resizer,
  .ta-app .ux-resizer {
    display: none;
  }

  .ta-app table.ta-table th,
  .ta-app table.ta-table td {
    padding: .35rem .5rem;
    font-size: .7rem;
  }
}

/* ===== DARK MODE (IDENTIK) ===== */
[data-bs-theme="dark"] .ta-app .btn-primary {
  box-shadow: 0 0 0 .2rem rgba(56,189,248,.25), 0 0 18px rgba(56,189,248,.45);
}

[data-bs-theme="dark"] .ta-app .btn-primary:hover {
  box-shadow: 0 0 0 .2rem rgba(56,189,248,.35), 0 0 24px rgba(56,189,248,.55);
}

/* ===== ACCESSIBILITY (IDENTIK) ===== */
@media (forced-colors: active) {
  .ta-app table.ta-table thead th,
  .ta-app table.ta-table tbody td {
    border-color: CanvasText !important;
  }

  .ta-app .btn:focus-visible {
    outline: 2px solid Highlight !important;
  }
}

@media (prefers-reduced-motion: reduce) {
  *,
  *::before,
  *::after {
    animation-duration: 0.01ms !important;
    animation-iteration-count: 1 !important;
    transition-duration: 0.01ms !important;
  }
}
