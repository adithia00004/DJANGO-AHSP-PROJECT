DJANGO_SECRET_KEY=insecure-dev-key
DJANGO_DEBUG=True

# LAN hosts
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,192.168.100.26
DJANGO_CSRF_TRUSTED_ORIGINS=http://192.168.100.26:8000,http://127.0.0.1:8000

# PostgreSQL defaults (adjust as needed)
POSTGRES_DB=ahsp_sni_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
PGBOUNCER_PORT=6432

# Cache Configuration - ENABLED for Redis Session Store
# CRITICAL: Redis required for concurrent session handling (fixes 50% auth failures)
CACHE_BACKEND=redis
REDIS_URL=redis://127.0.0.1:6379/1

# Celery Configuration (OPTIONAL - for async tasks)
# CELERY_BROKER_URL=redis://127.0.0.1:6379/0
# CELERY_RESULT_BACKEND=redis://127.0.0.1:6379/0

# PgBouncer pool tuning (optional)
PGBOUNCER_MAX_CLIENT_CONN=1000
PGBOUNCER_DEFAULT_POOL_SIZE=140
PGBOUNCER_RESERVE_POOL_SIZE=20

# Locust test users (optional)
# Format: TEST_USER_POOL=user1@example.com:pass1,user2@example.com:pass2

# Disable Allauth rate limits (dev/load testing only)
# ACCOUNT_RATE_LIMITS_DISABLED=true
