# EditorConfig - https://editorconfig.org/

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Python files
[*.py]
indent_size = 4

# Django HTML templates - NO auto-formatting
[**/templates/**/*.html]
indent_size = 2
trim_trailing_whitespace = false

# Markdown
[*.md]
trim_trailing_whitespace = false
